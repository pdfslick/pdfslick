{
  "name": "@pdfslick/core",
  "version": "1.2.2",
  "source": "./index.ts",
  "main": "dist/umd/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "description": "PDFSlick â€” view and interact with PDF documents in your React and SolidJS apps.",
  "keywords": [
    "pdf",
    "pdf.js",
    "react",
    "solidjs",
    "solid",
    "pdfslick"
  ],
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pdfslick/pdfslick.git",
    "directory": "packages/core"
  },
  "sideEffects": [
    "*.css"
  ],
  "license": "MIT",
  "scripts": {
    "lint": "eslint \"**/*.ts*\"",
    "dev": "concurrently \"rollup --config node:@pdfslick/rollup-config --watch\" \"npm run css-watch\"",
    "build": "rollup --config node:@pdfslick/rollup-config --environment NODE_ENV:production && npm run css",
    "css": "postcss styles/pdf_viewer.css --config ./postcss.config.cjs --dir dist",
    "css-watch": "npm run css -- --watch"
  },
  "dependencies": {
    "pdfjs-dist": "^3.11.174",
    "zustand": "^4.4.3"
  },
  "devDependencies": {
    "@pdfslick/rollup-config": "*",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.1",
    "eslint": "^8.51.0",
    "eslint-config-custom": "*",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-inline-svg": "^6.0.0",
    "react": "^18.2.0",
    "tsconfig": "*",
    "typescript": "^5.2.2"
  },
  "rollup": {
    "globals": {
      "zustand": "zustand",
      "pdfjs-dist": "pdfjsLib"
    },
    "name": "PDFSlickCore"
  }
